<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yourapp.applocker">

    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:label="AppLocker"
        android:theme="@style/Theme.AppLocker">
        <activity android:name=".ui.LockActivity" />
        <activity android:name=".ui.PlaceholderActivity" />
        <service
            android:name=".service.AppWatchAccessibilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="false">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>
    </application>
</manifest>
